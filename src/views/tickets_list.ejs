<h2>Chamados</h2>

<form class="search" method="get" action="/tickets">
  <input type="text" name="q" value="<%= q %>" placeholder="Buscar por título ou descrição">
  <button>Buscar</button>
</form>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Título</th>
      <th>Prioridade</th>
      <th>Status</th>
      <th>Autor</th>
      <th>Criado em</th>
    </tr>
  </thead>
  <tbody>
    <% if (tickets.length === 0) { %>
      <tr><td colspan="6">Nenhum chamado encontrado.</td></tr>
    <% } %>
    <% tickets.forEach(t => { %>
      <tr>
        <td><a href="/tickets/<%= t.id %>">#<%= t.id %></a></td>
        <td><a href="/tickets/<%= t.id %>"><%= t.title %></a></td>
        <td><%= t.priority %></td>
        <td><%= t.status %></td>
        <td><%= t.author?.name %></td>
        <td><%= new Date(t.createdAt).toLocaleString('pt-BR') %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
